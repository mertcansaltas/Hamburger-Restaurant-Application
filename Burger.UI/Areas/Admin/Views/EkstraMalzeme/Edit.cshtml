@model BurgerService.DTOs.EkstraMalzemeCreateDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffb3; /* Arka plan rengi */
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="file"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
            box-sizing: border-box;
        }

        input[type="submit"],
        a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover,
            a:hover {
                background-color: #0056b3;
            }

        .text-danger {
            font-size: 14px;
        }
    </style>
</head>

<body>

    <div class="container">
        <h4 class="text-center">Ürün Güncelle</h4>
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Adi">Adı</label>
                        <input asp-for="Adi" class="form-control" />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fiyat">Fiyat</label>
                        <input asp-for="Fiyat" class="form-control" />
                        <span asp-validation-for="Fiyat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        <label class="control-label" asp-for="ImageFile">Image URL:</label>
                        <input class="form-control" type="file" asp-for="ImageFile" name="ImageUrl" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Aciklama">Açıklama</label>
                        <input asp-for="Aciklama" class="form-control" />
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>

</body>
</html>