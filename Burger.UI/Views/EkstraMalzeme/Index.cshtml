@model List<EkstraMalzeme>
@{
    Layout = "_Layout";
}
<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>EkstraMalzeme</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>
    <!-- bradcam_area_start -->
    <div class="bradcam_area breadcam_bg overlay">
        <h3>Ekstra Malzemeler</h3>
    </div>
    <!-- bradcam_area_end -->
    <!-- best_burgers_area_start  -->
    <div class="best_burgers_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section_title text-center mb-80">
                    
                        @*   <h3>Best Ever Burgers</h3> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- best_burgers_area_end  -->
    <!-- features_room_startt -->
    <div class="Burger_President_area">
        <div class="Burger_President_here">
            @foreach (var ekstra in Model)
            {
                <div class="single_Burger_President">
                    <div class="room_thumb">
                        <img src="~/Templete/burger-master/img/burger/ekstramalzeme.png" alt="" style="border: 2px solid black;">
                        <div class="room_heading d-flex justify-content-between align-items-center">
                            <div class="room_heading_inner">
                                <span>@ekstra.Fiyat₺</span>
                                <h3>@ekstra.Adi</h3>
                                <p>@ekstra.Aciklama</p>
                                <a asp-action="SepeteEkstraMalzemeEkle" asp-controller="EkstraMalzeme" asp-route-id="@ekstra.ID" class="boxed-btn3">Sepete Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>

</html>