<body>
    <!-- header-start -->
    <header>
        <div class="header-area bg-dark">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid p-0">
                    <div class="row align-items-center no-gutters">
                        <div class="col-xl-5 col-lg-5">
                            <div class="main-menu d-none d-lg-block">
                                <nav class="menu-list">
                                    <ul id="navigation" class="d-flex">
                                        <li><a class="active" href="@Url.Action("Index","Home")">DevlopBurger</a></li>
                                        <li><a href="@Url.Action("Index","About")">Hakkımızda</a></li>
                                        <li><a href="@Url.Action("Index","Menuler")">Menüler</a></li>
                                        <li><a href="@Url.Action("Index","Hamburger")">Hamburgerler</a></li>
                                        <li><a href="@Url.Action("Index","Icecek")">İçecekler</a></li>
                                        <li><a href="@Url.Action("Index","Sos")">Soslar</a></li>
                                        <li><a href="@Url.Action("Index","EkstraMalzeme")">Ekstra Malzemeler</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2"></div>
                        <div class="col-xl-5 col-lg-5 d-none d-lg-block">
                            <div class="book_room d-flex justify-content-end">
                                <div class="socail_links class="deal_text">
                                    <ul>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li><a class="text-white" href="#" >@User.Identity.Name</a></li>
                                            <li><div class="book_btn d-none d-sm-block ml-3"><a asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket text-white"></i></a></div></li>
                                            <li><div class="book_btn d-none d-sm-block ml-3"><a asp-area="" asp-controller="Siparis" asp-action="Siparislerim"><i class="fa-brands fa-shopify"></i></a></div></li>
                                        }
                                        else
                                        {
                                            <li><div class="book_btn d-none d-sm-block"><a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-user" aria-hidden="true"></i></a></div></li>
                                            <li><div class="book_btn d-none d-sm-block"><a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i></a></div></li>
                                        }
                                        <li><div class="book_btn d-none d-sm-block ml-3"><a asp-action="Index" asp-controller="Sepet"><i class="fa fa-shopping-cart" aria-hidden="true" text="white"></i></a></div></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
<!-- header-end -->
